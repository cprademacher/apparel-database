<div class="button-and-form">
<button class="add-button">Add Product</button>
<form action="../../new-product" method="put" enctype="multipart/form-data">
    <div class="new-product-form" style="display: none;">
        <input type="text" class="new-product-name" placeholder="Product Name">
        <input type="text" class="new-product-price" placeholder="Product Price">
        <input type="text" class="new-product-stock" placeholder="Product Stock">
        <input type="file" id="new-product-url" name="mypic" accept="image/*">
        <button type="button" class="new-product-button">Submit</button>
    </div>
</form>
</div>

<div class="products-container">
{{#each products as |product|}}
{{> product-details}}
{{/each}}
</div>
<script src="/js/create.js"></script>